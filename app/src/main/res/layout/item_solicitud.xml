<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvSolicitudMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Solicitud de permiso laboral"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/btnAceptar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/acept"
        android:contentDescription="Aceptar permiso"
        android:layout_marginEnd="8dp"
        android:background="?selectableItemBackground"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/btnRechazar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cancel"
        android:contentDescription="Rechazar permiso"
        android:background="?selectableItemBackground"
        android:padding="8dp"/>
</LinearLayout>




