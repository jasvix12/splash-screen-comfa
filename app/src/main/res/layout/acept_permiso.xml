<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Colorblanco"
    tools:context=".PermisosActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/ColorVerdeClaro"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/comlogo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Solicitud de Permiso"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_perfil" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laboral"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp" />


                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/aceptLaboral"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/acept"
                        android:background="@drawable/circle_green" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/cancelLaboral"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cancel"
                        android:background="@drawable/circle_red" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salud"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/aceptSalud"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/acept"
                        android:background="@drawable/circle_green" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/cancelSalud"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cancel"
                        android:background="@drawable/circle_red" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personal"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/aceptPersonal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/acept"
                        android:background="@drawable/circle_green" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/cancelPersonal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cancel"
                        android:background="@drawable/circle_red" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estudio"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/aceptEstudio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/acept"
                        android:background="@drawable/circle_green" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/cancelEstudio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cancel"
                        android:background="@drawable/circle_red" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ColorVerdeClaro"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/solicitud_permiso" />

            <ImageView
                android:id="@+id/pendingIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/pendientes" />

            <ImageView
                android:id="@+id/plusIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/mas" />

            <ImageView
                android:id="@+id/approvedIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/acept" />

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/ubicacion" />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




